{
    // Enabled by default all recommended ESLint rules (http://eslint.org/docs/rules/) - (Recommended)
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {

    },
    "plugins": [
        "eslint-plugin-react"
    ],
    "globals": {
        "require": false,
        "exports": true,
        "module": true
    },
    "rules": {
        "no-console": 1,

        // Best Practices (http://eslint.org/docs/rules/#best-practices)
        "block-scoped-var": 2,
        "consistent-return": 2,
        "curly": 2,
        "dot-location": [2, "property"],
        "eqeqeq": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-proto": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-sequences": 2,
        "no-useless-call": 2,
        "no-with": 2,
        "radix": 2,
        "wrap-iife": [2, "inside"],

        "dot-notation": 1,
        "guard-for-in": 1,
        "no-alert": 1,
        "no-else-return": 1,
        "no-floating-decimal": 1,
        "no-lone-blocks": 1,
        "no-loop-func": 1,
        "no-multi-spaces": 1,
        "no-multi-str": 1,
        "no-octal-escape": 1,
        "no-param-reassign": [1, {"props": false}],
        "no-process-env": 1,
        "no-self-compare": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": [1, {"allowShortCircuit": true }],
        "no-useless-concat": 1,
        "no-void": 1,
        "no-warning-comments": 1,
        "vars-on-top": 1,
        "yoda": 1,

        // Strict (http://eslint.org/docs/rules/#strict-mode)

        "strict": [2, "global"],

        // Variables (http://eslint.org/docs/rules/#variables)
        "no-catch-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": 2,
        "no-undef-init": 2,

        "no-use-before-define": [1, "nofunc"],

        // Nodejs (http://eslint.org/docs/rules/#nodejs-and-commonjs)
        "no-path-concat": 2,

        // Stylistic Issues (http://eslint.org/docs/rules/#stylistic-issues)
        "max-nested-callbacks": [2, 3],
        "new-cap": 2,
        "new-parens": 2,
        "no-array-constructor": 2,

        "array-bracket-spacing": [1, "never"],
        "brace-style": [1, "1tbs", { "allowSingleLine": true }],
        "comma-spacing": [1, {"before": false, "after": true}],
        "comma-style": [1, "last"],
        "computed-property-spacing": [1, "never"],
        "eol-last": 1,
        "func-names": 1,
        "indent": [1, 4, {"SwitchCase": 1}],
        "jsx-quotes": [1, "prefer-double"],
        "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
        "linebreak-style": [1, "unix"],
        "no-lonely-if": 1,
        "no-nested-ternary": 1,
        "no-spaced-func": 1,
        "no-trailing-spaces": 1,
        "no-unneeded-ternary": 1,
        "object-curly-spacing": [1, "never"],
        "one-var": [1, "never"],
        "quote-props": [1, "as-needed"],
        "quotes": [1, "double", "avoid-escape"],
        "semi-spacing": [1, {"before": false, "after": true}],
        "semi": [1, "always"],
        "space-after-keywords": [1, "always"],
        "space-before-keywords": [1, "always"],
        "space-before-blocks": [1, "always"],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "space-return-throw-case": 1,
        "space-unary-ops": [1, { "words": true, "nonwords": false }],
        "spaced-comment": 1,
        "wrap-regex": 1,

        // ES6 (http://eslint.org/docs/rules/#ecmascript-6)

        "arrow-spacing": 2,
        "constructor-super": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,

        "arrow-parens": 1,
        "no-var": 1,
        "prefer-spread": 1,
        "prefer-arrow-callback": 1
    }
}
